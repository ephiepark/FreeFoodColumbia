#main {
    width: 1000;
    margin: 0 auto;
}
#map {
    float: right;
}
h1 {
    display: block;
    text-align: center;
    color: #6daed1;
    font-family: arial;
    font-weight: bold;
    font-size: 50px;
    margin: 20px;
}
#list {
    float: left;
    margin-top: -10px;
    width: 450px;
}
li {
    list-style-type: none;
    margin-bottom: 10px;
    padding: 10px;
    background: #b9d0e9;
    border: 3px solid #6daed1;
    -moz-border-radius: 20px;
    -webkit-border-radius: 20px;
    -khtml-border-radius: 20px;
    border-radius: 20px;
}
ol span {
    display: block;
}
span .location {
	margin-bottom: 5px;
	display: block;
}